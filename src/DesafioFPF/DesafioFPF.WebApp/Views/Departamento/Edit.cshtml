@model DesafioFPF.WebApp.Banco.Entities.Rule

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Rule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nome</label>
                <input asp-for="Name" class="form-control" style="width:auto"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <fieldset>
                    Ativo
                    <select asp-for="Active" id="Active" name="Active">
                        <option value=""></option>
                        <option value="A">Ativo</option>
                        <option value="I">Inativo</option>
                    </select>
                </fieldset>
            </div>
            <div class="row" style="flex-flow: row; margin-left: 0px; ">
                <div class="column">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
                <div class="column">
                    <button type="button" class="btn btn-primary" value="Cancel" onclick="history.back();">Cancelar</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
