@model DesafioFPF.WebApp.Banco.Entities.Rule

@{
    ViewData["Title"] = "Edit";
}

<h1>Departamento</h1>

@*<h4>Rule</h4>*@
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group" hidden>
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Nome</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Situação</label>
        <select class="form-control" asp-for="Active" id="Active" name="Active">
            <option value=""></option>
            <option value="A">Ativo</option>
            <option value="I">Inativo</option>
        </select>
    </div>
    <div class="form-group" hidden>
        <label asp-for="CreatedAt" class="control-label"></label>
        <input asp-for="CreatedAt" class="form-control" />
        <span asp-validation-for="CreatedAt" class="text-danger"></span>
    </div>
    <div class="form-group" hidden>
        <label asp-for="ModifiedAt" class="control-label"></label>
        <input asp-for="ModifiedAt" class="form-control" />
        <span asp-validation-for="ModifiedAt" class="text-danger"></span>
    </div>
    <div class="form-group text-right">
        <input type="submit" value="Salvar" class="btn btn-primary" />
        <button type="button" class="btn btn-danger" value="Cancel" onclick="history.back();">Cancelar</button>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
