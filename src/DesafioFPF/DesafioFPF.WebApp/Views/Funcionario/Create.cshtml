@model DesafioFPF.WebApp.Banco.Entities.Employee

@{
    ViewData["Title"] = "Create";
}

<h1>Funcionário</h1>

@*<h4>Employee</h4>*@
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Nome</label>
        <input asp-for="Name" type="text" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="form-group col">
            <label asp-for="IdRule" class="control-label">Departamento</label>
            <select class="form-control" id="comboDepto">
                <option disabled selected>-- Selecione --</option>
                @foreach (var depto in Model.Departamento)
                {
                    <option data-Id="@depto.Id" value="@depto.Id">@depto.Name</option>
                }
            </select>
            @*<input asp-for="IdRule" type="text" class="form-control" />*@
            <span asp-validation-for="IdRule" class="text-danger"></span>
        </div>
        <div class="form-group col">
            <label for="exampleFormControlSelect1">Sexo</label>
            <select asp-for="Gender" class="form-control" id="Gender" name="Gender">
                <option value="M">Masculino</option>
                <option value="F">Feminino</option>
            </select>
        </div>
        <div class="form-group col">
            <label for="exampleFormControlSelect1">Situação</label>
            <select asp-for="Active" class="form-control" id="Active" name="Active">
                <option value="A">Ativo</option>
                <option value="I">Inativo</option>
            </select>
        </div>
        <div class="form-group col">
            <label asp-for="Salary" class="control-label">Salário</label>
            <input asp-for="Salary" class="form-control" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group text-right">
        <input type="submit" value="Salvar" class="btn btn-primary" />
        <button type="button" class="btn btn-danger" value="Cancel" onclick="history.back();">Cancelar</button>
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
